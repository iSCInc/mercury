<div {{bind-attr class="view.headerHidden:hidden :lightbox-header"}}>
	<div class="lightbox-close-wrapper" {{action 'closeLightbox'}}>
		<svg role="img" class="lightbox-close-button">
			<use xlink:href="#close"></use>
		</svg>
	</div>
	<div class="lightbox-header-title">{{header}}</div>
</div>
<div class="lightbox-content">
	<div class="lightbox-content-inner">
		{{yield}}
	</div>
</div>
{{#if footer}}
    <div {{bind-attr class="view.lightboxFooterExpanded view.footerHidden:hidden :lightbox-footer"}}>{{footer}}</div>
{{/if}}
