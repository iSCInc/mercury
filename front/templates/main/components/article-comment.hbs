<div class='avatar'>
	<img src='{{unbound user.avatar}}' width='50px'>
</div>
<div class='content'>
	<span class='timestamp'>{{timeAgo comment.created}}</span>
	<span class='username'>
		{{#if user.url}}
			<a href='{{unbound user.url}}'>{{unbound userName}}</a>
		{{else}}
			{{unbound userName}}
		{{/if}}
	</span>
	{{{text}}}
	{{#if comment.comments}}
		<button class='show-reply-btn' {{action 'toggleExpand'}}>
			{{view.T-article-replies-label}}
		</button>
		<ul {{bind-attr class='expanded'}}>
		{{#each comment in comment.comments}}
			{{article-comment comment=comment users=users}}
		{{/each}}
		</ul>
	{{/if}}
</div>
